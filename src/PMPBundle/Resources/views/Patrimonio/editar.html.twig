{% extends '::base.html.twig' %}

{% block body %}
    {% block javascripts %}
        {% javascripts '@PMPBundle/Resources/public/js/Patrimonio/patrimonio.js'%}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-head-line">Editar - Patrim&ocirc;nio</h1>
        </div>
    </div>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Editar
            </div>
            <div class="panel-body">
                <form class="form-horizontal" method="post" action="{{ path('patrimonio_editar',{'id':entity.id}) }}">
                    <div class="form-group">
                        <div class="col-md-2">
                            <label for="lblNome">Plaqueta</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" id="patrimoniPlaqueta" name="patrimoniPlaqueta" class="form-control" value="{{ entity.plaqueta }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            <label for="lblNome">Descricao</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" id="patrimonioDescicao" name="patrimonioDescicao" class="form-control" value="{{ entity.nopatrimonio }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            <label for="lblNome">Data Aquisição</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" id="patrimonioDtAquisicao" name="patrimonioDtAquisicao" class="form-control" value="{{ entity.dtaquisicao|date('d-m-Y') }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            <label for="lblNome">Situação</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" id="patrimonioSituacao" name="patrimonioSituacao" class="form-control"  value="{{ entity.situacao }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            <label for="lblNome">Nota Fiscal(nº)</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" id="patrimonioNotaFiscal" name="patrimonioNotaFiscal" class="form-control"  value="{{ entity.nrnotafiscal }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label for="lblNome">Conta Patrimonial</label>
                        </div>
                        <div class="col-md-3">
                            <select name="patrimonioContaPatrimonial" id="centro_custo" data-placeholder="Selecione"
                                    style="width: 100%;" class="form-control m-b">
                                {% for key, contaPatrimonial in contaPatrimoniais %}
                                    <option value="{{ contaPatrimonial.id }}">{{ contaPatrimonial.nome }}</option>  {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label for="lblNome">Centro de Custo</label>
                        </div>
                        <div class="col-md-3">
                            <select name="patrimonioCentroCusto" id="centro_custo" data-placeholder="Selecione"
                                    style="width: 100%;" class="form-control m-b">
                                {% for key, centroCusto in centroCustos %}
                                    <option value='{{ centroCusto.id }}'    >{{ centroCusto.nocentroCusto }}-{{ centroCusto.nrcentroCusto }}</option>  {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <label for="lblNome">Imagem</label>
                        </div>
                        <div class="col-md-3">
                            <input type="file" name="patrimonioImagem">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <button class="btn btn-labeled btn-info" type="submit" name="salvar" id="btnSalvar">Salvar
                            </button>
                            <a class="btn btn-default" href="{{ path('patrimonio_index') }}">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
{% endblock %}