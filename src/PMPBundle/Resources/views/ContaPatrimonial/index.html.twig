{% extends '::base.html.twig' %}

{% block body %}
    <h3>Contas Patrimonial
        <a class="btn btn-primary pull-right" href="">Nova</a>
    </h3>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <!-- PAINEL COM FORMULARIO DE BUSCA -->
    <div class="panel panel-default">
        <div class="panel-body">
            <form id="form-contaPatrimonial-busca" action="{{ path("_contaPatrimonial_index") }}" method="post">
                <div class="row">
                    <div class="form-group col-md-3">
                        <label for="input-id">Cod</label>
                         <input type="text" class="form-control" name="txtId" id="txtId" autocomplete="off">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="input-nome">Nome</label>
                        <input id="txtNome" name="txtNome" type="text" class="form-control" autocomplete="off">
                    </div>
                    <div class="form-group col-md-2">
                        <label for="btn-submit" style="visibility: hidden;">Botão de Buscar</label>
                        <button class="btn btn-default" type="submit" id="btn-submit">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Buscar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- PAINEL COM TABELA COM RESPOSTAS DAS BUSCAS -->
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-responsive table-bordered">
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th width="40%">Cod</th>
                        <th width="40%">Nome</th>
                        <th width="20%" align="right"></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        {% if contasPatrimoniais is null %}
                            <td colspan="4" align="center" valign="middle"> Nenhum Registro </td>
                        {% else %}
                            {% for contaPatrimonial in contasPatrimoniais %}
                                <td>{{ contaPatrimonial.id }}</td>
                                <td>{{ contaPatrimonial.nome }}</td>
                                <td align="right">
                                    <a href="" class="btn btn-sm btn-default" title="Editar">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </a>
                                    <a href="" class="btn btn-sm btn-warning" title="Excluir">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                </td>
                            {% endfor %}
                        {% endif %}
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
