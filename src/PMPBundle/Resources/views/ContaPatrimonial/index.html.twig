{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-head-line">Conta Patrimonial</h1>
        </div>
    </div>

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success col-md-12">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <a class="btn btn-success" href="{{ path('contaPatrimonial_cadastro') }}">Cadastro Conta Patrimonial</a>
    </br>
    </br>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Buscar Conta Patrimonial
            </div>
            <div class="panel-body">
                <form class="form-horizontal" method="post" action="{{ path('contaPatrimonial_index') }}">
                     <div class="form-group">
                            <div class="col-md-1">
                                <label for="input-id">Cod</label>
                            </div>
                            <div class="col-md-2">
                                <input type="text" id="txtId" name="txtId" class="form-control">
                            </div>
                            <div class="col-md-1">
                                <label for="input-nome">Nome</label>
                            </div>
                            <div class="col-md-5">
                                <input type="text" id="txtNome" name="txtNome" class="form-control">
                            </div>
                            <div class="col-md-3" style="text-align: center;">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-search"></i>
                                    Buscar
                                </button>
                            </div>
                     </div>
                 </form>
            </div>
        </div>


        <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped" style="font-family: 'Arial';">
                                <thead>
                                <tr>
                                    <th width="40%">Cod</th>
                                    <th width="40%">Nome</th>
                                    <th width="20%" align="right"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if contasPatrimoniais %}
                                    {% for contaPatrimonial in contasPatrimoniais %}
                                        <tr>
                                            <td>{{ contaPatrimonial.id }}</td>
                                            <td>{{ contaPatrimonial.nome }}</td>
                                            <td align="right">
                                                <a href="{{ path('contaPatrimonial_editarContaPatrimonial', {'id': contaPatrimonial.id}) }}" class="btn btn-sm btn-default" title="Editar">
                                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                                </a>
                                                <a href="" class="btn btn-danger" title="Excluir">
                                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="4" style="text-align: center;">Insira o c&oacute;digo ou nome da conta patrimonial para efetuar a busca</td>
                                    </tr>
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
        </div>
    </div>
    <script type="text/javascript">
        $( document ).ready(function() {
            $("#conta-patrimonial").addClass( "active-menu" );
        });
    </script>
{% endblock %}